@model Domain.Sto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalji o stolu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kapacitet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kapacitet)
        </dd>
        <dt class = "col-sm-2">
            Cena stola
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CenaStola)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Proizvodjac)
        </dt>
        <dd class = "col-sm-10">
            @Model.Proizvodjac.ToString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mesto)
        </dt>
        <dd class = "col-sm-10">
            @Model.Mesto.ToString()
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Izmeni", "Edit", new { id = Model.RbStola }) |
    <a asp-action="Index">Nazad na listu stolova</a>
</div>
