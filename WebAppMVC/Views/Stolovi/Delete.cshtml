@model Domain.Sto

@{
    ViewData["Title"] = "Delete";
}

<h1>Brisanje stola</h1>

<h3>Da li ste sigurni da želite da obrišete ovaj sto?</h3>
<div>
    <h4>Sto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kapacitet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kapacitet)
        </dd>
        <dt class = "col-sm-2">
            Cena stola
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CenaStola)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Proizvodjac)
        </dt>
        <dd class = "col-sm-10">
            @Model.Proizvodjac.ToString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mesto)
        </dt>
        <dd class = "col-sm-10">
            @Model.Mesto.ToString()
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu stolova</a>
    </form>
</div>
