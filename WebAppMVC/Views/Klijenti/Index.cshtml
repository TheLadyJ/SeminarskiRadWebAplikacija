@model IEnumerable<Domain.Klijent>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista svih klijenata</h1>

<p>
    <a asp-action="Create">Kreiraj novog klijenta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                    @Html.ActionLink("Izmeni", "Edit", new { id=item.KlijentId }) |
                    @Html.ActionLink("Prikaži detalje", "Details", new { id=item.KlijentId }) |
                @Html.ActionLink("Obriši", "Delete", new { id=item.KlijentId })
            </td>
        </tr>
}
    </tbody>
</table>
